<mvc:View
    controllerName="ifoodfrontendtest.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
		xmlns:f="sap.f" 
		xmlns:fb="sap.ui.comp.filterbar"
		xmlns:core="sap.ui.core" 
    displayBlock="true"
		xmlns="sap.m"
>
	<App>
		<Page>
			<customHeader>
				<f:ShellBar core:require="{ Helper: 'ifoodfrontendtest/util/Helper' }" title="{i18n>appTitle}" homeIcon="{:= Helper.resolvePath('./img/logo_ui5.png') }" />
			</customHeader>
			<content>
				<f:DynamicPage>
					<f:header>
						<f:DynamicPageHeader pinnable="false">
							<fb:FilterBar id="api_filter_bar" showRestoreButton="false" search="onFBSearch">
							</fb:FilterBar>
						</f:DynamicPageHeader>
					</f:header>
					<f:content>

						<List id="playlistList"
							items="{ path: 'playlists>/items' }"
							mode="None"
							growing="true"
							growingScrollToLoad="true"
							showNoData="false"
							showSeparators="None">
							<headerToolbar>
								<OverflowToolbar class="sapUiSizeCompact" visible="{= !${view>/isMobile} }">
									<ToolbarSpacer />
									<SearchField id="searchTodoItemsInput" liveChange=".onSearch" width="20rem"/>
								</OverflowToolbar>
							</headerToolbar>
							<infoToolbar>
								<OverflowToolbar
									visible="{= !!${view>/filterText} }"
									active="false">
									<Label text="{view>/filterText}" />
								</OverflowToolbar>
							</infoToolbar>
							<CustomListItem>
								<HBox>
									<VBox justifyContent="Center">
										<Text text="{playlists>name}"/>
									</VBox>
								</HBox>
							</CustomListItem>
						</List>

					</f:content>
				</f:DynamicPage>

			</content>

			<footer>
				<OverflowToolbar>
					<Button 
						press="onLoginPress"
						text="Login Spotify" />
				</OverflowToolbar>
			</footer>

		</Page>
	</App>
</mvc:View>
