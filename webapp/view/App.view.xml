<mvc:View
    controllerName="ifoodfrontendtest.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
		xmlns:f="sap.f" 
		xmlns:fb="sap.ui.comp.filterbar"
		xmlns:core="sap.ui.core" 
    displayBlock="true"
		xmlns="sap.m"
>
	<App>
		<Page>
			<customHeader>
				<f:ShellBar core:require="{ Helper: 'ifoodfrontendtest/util/Helper' }" title="{i18n>appTitle}" homeIcon="{:= Helper.resolvePath('./img/logo_spotify.png') }" />
			</customHeader>
			<content>
				<f:DynamicPage>
					<f:header>
						<f:DynamicPageHeader pinnable="false">
							<fb:FilterBar id="api_filter_bar" showRestoreButton="false" showGoOnFB="false" search=".onFBSearch" >
							</fb:FilterBar>
						</f:DynamicPageHeader>
					</f:header>
					<f:content>

						<List id="playlistList"
							items="{ path: 'playlists>/items' }"
							mode="SingleSelectMaster"
							growing="true"
							growingScrollToLoad="true"
							showNoData="false"
							showSeparators="None">
							<headerToolbar>
								<Toolbar class="sapUiSizeCompact">
									<ToolbarSpacer />
									<SearchField id="searchTodoItemsInput" liveChange=".onSearch" width="{= ${view>/isMobile} ? 'auto' : '20rem' }" />
								</Toolbar>
							</headerToolbar>
							<infoToolbar>
								<OverflowToolbar
									visible="{= !!${view>/filterText} }"
									active="false">
									<Label text="{view>/filterText}" />
								</OverflowToolbar>
							</infoToolbar>
							<StandardListItem
								title="{playlists>name}"
								description="{playlists>description}"
								icon="{playlists>images/0/url}"
								iconDensityAware="false"
								iconInset="false" />
						</List>

					</f:content>
				</f:DynamicPage>
			</content>
		</Page>
	</App>
</mvc:View>
